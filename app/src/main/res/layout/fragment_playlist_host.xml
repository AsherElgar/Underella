<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/videoFramePlaylist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/buttonFramePlaylist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.15">

        <ImageView
            android:id="@+id/ivChatPlaylist"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/messages_icon"
            android:translationZ="101dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivListPlaylist"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="top|right"
            android:layout_margin="16dp"
            android:src="@drawable/ic_playlist"
            android:translationZ="101dp"
            android:visibility="gone" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vpButtomPagerPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

</LinearLayout>
